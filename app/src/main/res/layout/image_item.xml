<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgFood"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:text="Food name"
        android:textSize="12sp"
        android:textColor="#F26627"
        android:layout_below="@+id/imgFood"
        android:textAlignment="center"
        android:layout_alignRight="@+id/imgFood"
        android:layout_alignEnd="@+id/imgFood"
        android:layout_marginRight="10dp"
       />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrice"
        android:textSize="12sp"
        android:textColor="#F26627"

        android:layout_below="@+id/txtName"
        android:layout_alignRight="@+id/txtName"
        android:layout_alignEnd="@+id/txtName"
       />

    <TextView
        android:text="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num"
        android:textSize="12sp"
        android:textColor="#F26627"
        android:layout_below="@+id/txtPrice"
        android:layout_alignRight="@+id/txtPrice"
        android:layout_alignEnd="@+id/txtPrice"

        />
</RelativeLayout>